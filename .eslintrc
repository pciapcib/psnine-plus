{
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "webextensions": true,
    "jquery": true
  },
  "extends": [
    "standard",
    "standard-react"
  ],
  "settings": {
    "react": {
      "pragma": "h"
    }
  },
  "rules": {
    "arrow-parens": [2, "as-needed"]
  }
}
